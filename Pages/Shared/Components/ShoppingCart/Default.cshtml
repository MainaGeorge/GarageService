@model int

@if (Model > 0)
{
    <a class="nav-link text-light" asp-page="../ShoppingCart/ShoppingCart" id="cart">

        <i class="fas fa-shopping-cart"></i>&nbsp;<span class="badge badge-danger text-light">@Model</span>
    </a>


}
else
{
    <a class="nav-link text-light" href="#" id="cart">

        <i class="fas fa-shopping-cart"></i>&nbsp;<span class="badge badge-success text-light">0</span>
    </a>
}


@page "/Delete/{emailAddress}"
@model SparkAuto.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-danger text-center mb-4">Are you sure you want to delete @Model.User.Name?</h1>

<div class="row whitebackground border my-auto mx-auto " style="width: 60%">
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" asp-for="User.Email" />
            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="User.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="User.Name" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="User.PhoneNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="User.PhoneNumber" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="User.Address"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="User.Address" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="User.PostalAddress"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="User.PostalAddress" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                        <label asp-for="User.City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="User.City" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-4">
                    </div>
                    <div class="col-8 row"></div>
                    <div class="col-6">
                        <a asp-page="Index" class="form-control btn btn-info" type="submit">Users</a>
                    </div><div class="col-6">
                        <button class="form-control btn btn-danger" type="submit">Delete</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

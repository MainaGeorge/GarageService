@page "/Delete/Service/{serviceId:int?}"
@model SparkAuto.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h3 class="text-danger display-4 mb-4">Are you sure you want to delete @Model.ServiceType.Name?</h3>

<form method="post">
    <div class="whitebackground border">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name">Name</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="ServiceType.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price">Price</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="ServiceType.Price" />
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-5">
                <partial name="Shared/_DeleteAndBackToListButtons" />
            </div>
        </div>
    </div>
</form>

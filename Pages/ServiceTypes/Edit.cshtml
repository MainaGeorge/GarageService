@page "/Edit/{serviceId:int?}"
@model SparkAuto.Pages.ServiceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-info mt-2 mb-2">Editing @Model.ServiceType.Name</h1>

<form method="post">
    <div class="whitebackground border">
        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name">Name</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="ServiceType.Name" />
                <span asp-validation-for="ServiceType.Name" class="text-danger d-block"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price">Price</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="ServiceType.Price" />
                <span asp-validation-for="ServiceType.Price" class="text-danger d-block"></span>

            </div>
        </div>
        <div class="form-group row">
            <div class="offset-2 col-5">
                <partial name="Shared/_UpdateAndBackToListButtons" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page "/Edit/Car/{carId:int?}"
@model SparkAuto.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4 class="text-center text-info">Editing @Model.Car.Make @Model.Car.Make @Model.Car.Year</h4>

<form method="post">
    <div class="whitebackground border">
        <input type="hidden" asp-for="Car.UserId" />
        <input type="hidden" asp-for="Car.Id" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.RegistrationNumber">Registration Number</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.RegistrationNumber" />
                <span asp-validation-for="Car.RegistrationNumber" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Make">Make</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Make" />
                <span asp-validation-for="Car.Make" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Model">Model</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Model" />
                <span asp-validation-for="Car.Model" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Colour">Colour</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Colour" />
                <span asp-validation-for="Car.Colour" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Miles">Miles</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Miles" />
                <span asp-validation-for="Car.Miles" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Year">Year</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Year" />
                <span asp-validation-for="Car.Year" class="text-danger d-block"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Car.Style">Style</label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" autocomplete="off" asp-for="Car.Style" />
                <span asp-validation-for="Car.Style" class="text-danger d-block"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="offset-2 col-5">
                <div class="row">
                    <div class="col-6">
                        <input class="btn btn-success form-control" type="submit" value="Update car" />
                    </div>


                    <div class="col-6">
                        <a asp-page="./Index" asp-route-userId="@Model.Car.UserId" class="btn btn-primary form-control">Back to Cars</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

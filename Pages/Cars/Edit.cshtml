@page "/Edit/{carId:int?}"
@model SparkAuto.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id" />
            <input type="hidden" asp-for="Car.UserId" />

            <div class="form-group">
                <label asp-for="Car.RegistrationNumber"></label>
                <input asp-for="Car.RegistrationNumber" class="form-control" />
                <span asp-validation-for="Car.RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Make"></label>
                <input asp-for="Car.Make" class="form-control" />
                <span asp-validation-for="Car.Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Colour"></label>
                <input asp-for="Car.Colour" class="form-control" />
                <span asp-validation-for="Car.Colour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Miles"></label>
                <input asp-for="Car.Miles" class="form-control" />
                <span asp-validation-for="Car.Miles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Style"></label>
                <input asp-for="Car.Style" class="form-control" />
                <span asp-validation-for="Car.Style" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
